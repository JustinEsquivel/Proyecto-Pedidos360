<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pedidos360</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    @* Admin: Usuarios + Clientes *@
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Crear usuario</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                    }

                    @* Ventas: catálogo + pedidos *@
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Ventas"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                        </li>
                    }

                    @* Operaciones: inventario + pedidos *@
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Operaciones"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Productos" asp-action="Index">Inventario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                        </li>
                    }

                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
