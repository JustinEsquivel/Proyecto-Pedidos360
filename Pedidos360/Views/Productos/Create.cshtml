@model Pedidos360.Models.Producto

@{
    ViewData["Title"] = "Crear producto";
}

<h2>Crear producto</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Nombre -->
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!-- Precio -->
    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <!-- ImpuestoPorc -->
    <div class="mb-3">
        <label asp-for="ImpuestoPorc" class="form-label"></label>
        <input asp-for="ImpuestoPorc" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ImpuestoPorc" class="text-danger"></span>
    </div>

    <!-- Stock -->
    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <!-- Categoría -->
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select asp-for="CategoriaId"
                asp-items="ViewBag.Categorias"
                class="form-select">
            <option value="">-- Seleccione una categoría --</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <!-- Imagen -->
    <div class="mb-3">
        <label class="form-label">Imagen</label>
        <input type="file" name="imagenFile" class="form-control" />
    </div>

    <!-- Activo -->
    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}