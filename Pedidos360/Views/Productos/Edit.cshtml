@model Pedidos360.Models.Producto

@{
    ViewData["Title"] = "Editar producto";
}

<h2>Editar producto</h2>

<div id="alertGeneral" class="alert alert-danger d-none"></div>

<form id="editForm"
      asp-action="Edit"
      asp-route-id="@Model.ProductoId"
      method="post"
      enctype="multipart/form-data"
      class="mt-3">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductoId" />
    <input type="hidden" asp-for="ImagenUrl" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Nombre -->
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!-- Precio -->
    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <!-- Impuesto -->
    <div class="mb-3">
        <label asp-for="ImpuestoPorc" class="form-label"></label>
        <input asp-for="ImpuestoPorc" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ImpuestoPorc" class="text-danger"></span>
    </div>

    <!-- Stock -->
    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <!-- Categoría -->
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select asp-for="CategoriaId"
                asp-items="ViewBag.Categorias"
                class="form-select">
            <option value="">-- Seleccione una categoría --</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <!-- Imagen actual -->
    <div class="mb-3">
        <label class="form-label">Imagen actual</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <img src="data:image/png;base64,@Model.ImagenUrl"
                 width="120"
                 class="rounded border" />
        }
        else
        {
            <p class="text-muted">No hay imagen</p>
        }
    </div>

    <!-- Nueva Imagen -->
    <div class="mb-3">
        <label class="form-label">Cambiar imagen</label>
        <input type="file" name="imagenFile" class="form-control" />
    </div>

    <!-- Activo -->
    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button id="btnGuardar" class="btn btn-primary" type="submit">
        Guardar cambios
    </button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const form = document.getElementById('editForm');
            const btnGuardar = document.getElementById('btnGuardar');
            const alertGeneral = document.getElementById('alertGeneral');

            function clearServerErrors() {
                alertGeneral.classList.add('d-none');
                alertGeneral.textContent = '';

                form.querySelectorAll('span[data-valmsg-for]').forEach(s => {
                    s.textContent = '';
                    s.classList.remove('field-validation-error');
                    s.classList.add('field-validation-valid');
                });

                const summary = form.querySelector('[data-valmsg-summary="true"]');
                if (summary) {
                    summary.innerHTML = '';
                    summary.classList.add('validation-summary-valid');
                    summary.classList.remove('validation-summary-errors');
                }
            }

            function showServerErrors(errors) {
                const general = errors[""] || errors["ModelOnly"] || null;
                if (general && general.length) {
                    alertGeneral.textContent = general.join(' ');
                    alertGeneral.classList.remove('d-none');
                }

                Object.keys(errors).forEach(key => {
                    if (!key) return;

                    const span = form.querySelector(`span[data-valmsg-for="${key}"]`);
                    if (span) {
                        span.textContent = errors[key].join(' ');
                        span.classList.remove('field-validation-valid');
                        span.classList.add('field-validation-error');
                    }
                });
            }

            form.addEventListener('submit', async function (e) {
                e.preventDefault();
                clearServerErrors();

                if (window.jQuery && jQuery(form).valid && !jQuery(form).valid()) {
                    return;
                }

                btnGuardar.disabled = true;

                try {
                    const formData = new FormData(form);

                    const resp = await fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: formData
                    });

                    if (resp.ok) {
                        const data = await resp.json();
                        window.location.href = data.redirectUrl;
                        return;
                    }

                    const errData = await resp.json();
                    if (errData && errData.errors) {
                        showServerErrors(errData.errors);
                    } else {
                        alertGeneral.textContent = 'Ocurrió un error inesperado.';
                        alertGeneral.classList.remove('d-none');
                    }
                } catch (ex) {
                    alertGeneral.textContent = 'No se pudo completar la solicitud.';
                    alertGeneral.classList.remove('d-none');
                } finally {
                    btnGuardar.disabled = false;
                }
            });
        })();
    </script>
}