@model Pedidos360.Areas.Identity.Data.ApplicationUser
@{
    ViewData["Title"] = "Detalle usuario";
    var roles = ViewBag.Roles as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<h2>Detalle usuario</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.NombreCompleto</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@string.Join(", ", roles)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
</div>
