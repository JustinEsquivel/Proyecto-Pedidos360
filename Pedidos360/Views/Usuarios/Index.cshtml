@model Pedidos360.Models.ViewModels.UsuariosIndexVM
@{
    ViewData["Title"] = "Usuarios";
    var roles = ViewBag.Roles as List<string> ?? new();
}

<h2>Usuarios</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Err"] != null)
{
    <div class="alert alert-danger">@TempData["Err"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-5">
        <label class="form-label">Buscar (username, correo o nombre)</label>
        <input name="texto" value="@Model.Texto" class="form-control" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Rol</label>
        <select name="rol" class="form-select">
            <option value="">-- Todos --</option>
            @foreach (var r in roles)
            {
                <option value="@r" selected="@(Model.Rol == r)">@r</option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <label class="form-label">Tamaño página</label>
        <select name="pageSize" class="form-select">
            @foreach (var s in new[] { 10, 15, 20, 30, 50 })
            {
                <option value="@s" selected="@(Model.PageSize == s)">@s</option>
            }
        </select>
    </div>

    <div class="col-md-2 d-flex align-items-end gap-2">
        <button class="btn btn-primary" type="submit">Filtrar</button>
        <a class="btn btn-secondary" asp-action="Index">Limpiar</a>
        <a class="btn btn-success"
           asp-area="Identity"
           asp-page="/Account/Register">Crear</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Correo</th>
            <th>Nombre</th>
            <th style="width:230px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Items)
        {
            <tr>
                <td>@u.UserName</td>
                <td>@u.Email</td>
                <td>@u.NombreCompleto</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@u.Id">Detalle</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@u.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.HasPrev ? "" : "disabled")">
                <a class="page-link"
                   asp-route-texto="@Model.Texto"
                   asp-route-rol="@Model.Rol"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-page="@(Model.Page - 1)">Anterior</a>
            </li>

            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-route-texto="@Model.Texto"
                       asp-route-rol="@Model.Rol"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-page="@p">@p</a>
                </li>
            }

            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link"
                   asp-route-texto="@Model.Texto"
                   asp-route-rol="@Model.Rol"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-page="@(Model.Page + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
}
