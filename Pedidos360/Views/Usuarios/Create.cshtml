@model Pedidos360.Models.ViewModels.AdminCreateUserVM
@{
    ViewData["Title"] = "Crear usuario";
}

<h2>Crear usuario</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NombreCompleto" class="form-label"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Ventas">Ventas</option>
            <option value="Operaciones">Operaciones</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Crear</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
