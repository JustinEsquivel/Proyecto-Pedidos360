@model Pedidos360.Areas.Identity.Data.ApplicationUser
@{
    ViewData["Title"] = "Eliminar usuario";
    var roles = ViewBag.Roles as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<h2>Eliminar usuario</h2>

<div class="alert alert-warning">
    ¿Seguro que deseas eliminar este usuario?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.NombreCompleto</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@string.Join(", ", roles)</dd>
        </dl>
    </div>
</div>

<form method="post" asp-action="Delete" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    @Html.AntiForgeryToken()
    <button class="btn btn-danger" type="submit">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
