@model Pedidos360.Models.ViewModels.ClientesIndexVM
@{
    ViewData["Title"] = "Clientes";
}

<h2>Clientes</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Err"] != null)
{
    <div class="alert alert-danger">@TempData["Err"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label">Nombre</label>
        <input name="nombre" value="@Model.Nombre" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Cédula</label>
        <input name="cedula" value="@Model.Cedula" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Tamaño página</label>
        <select name="pageSize" class="form-select">
            @foreach (var s in new[] { 10, 15, 20, 30, 50 })
            {
                <option value="@s" selected="@(Model.PageSize == s)">@s</option>
            }
        </select>
    </div>
    <div class="col-md-3 d-flex align-items-end gap-2">
        <button class="btn btn-primary" type="submit">Filtrar</button>
        <a class="btn btn-secondary" asp-action="Index">Limpiar</a>
        <a class="btn btn-success" asp-controller="Clientes" asp-action="Create">Nuevo</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th style="width:230px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Items)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Cedula</td>
                <td>@c.Correo</td>
                <td>@c.Telefono</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@c.ClienteId">Detalle</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@c.ClienteId">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.ClienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.HasPrev ? "" : "disabled")">
                <a class="page-link"
                   asp-route-nombre="@Model.Nombre"
                   asp-route-cedula="@Model.Cedula"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-page="@(Model.Page - 1)">Anterior</a>
            </li>

            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-route-nombre="@Model.Nombre"
                       asp-route-cedula="@Model.Cedula"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-page="@p">@p</a>
                </li>
            }

            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link"
                   asp-route-nombre="@Model.Nombre"
                   asp-route-cedula="@Model.Cedula"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-page="@(Model.Page + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
}
