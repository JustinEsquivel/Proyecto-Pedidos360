@model Pedidos360.Models.Cliente
@{
    ViewData["Title"] = "Editar cliente";
}

<h2>Editar cliente</h2>

<div id="alertGeneral" class="alert alert-danger d-none"></div>

<form id="editForm" asp-action="Edit" asp-route-id="@Model.ClienteId" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ClienteId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cedula" class="form-label"></label>
        <input asp-for="Cedula" class="form-control" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <button id="btnGuardar" class="btn btn-primary" type="submit">Guardar cambios</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const form = document.getElementById('editForm');
            const btnGuardar = document.getElementById('btnGuardar');
            const alertGeneral = document.getElementById('alertGeneral');

            function clearServerErrors() {
                alertGeneral.classList.add('d-none');
                alertGeneral.textContent = '';

                // Limpia spans (asp-validation-for)
                form.querySelectorAll('span[data-valmsg-for]').forEach(s => {
                    s.textContent = '';
                    s.classList.remove('field-validation-error');
                    s.classList.add('field-validation-valid');
                });

                // Limpia el validation summary si hubiera texto
                const summary = form.querySelector('[data-valmsg-summary="true"]');
                if (summary) {
                    summary.innerHTML = '';
                    summary.classList.add('validation-summary-valid');
                    summary.classList.remove('validation-summary-errors');
                }
            }

            function showServerErrors(errors) {
                // Errores generales: key "" o similares
                const general = errors[""] || errors["ModelOnly"] || null;
                if (general && general.length) {
                    alertGeneral.textContent = general.join(' ');
                    alertGeneral.classList.remove('d-none');
                }

                Object.keys(errors).forEach(key => {
                    if (!key) return; // general

                    const span = form.querySelector(`span[data-valmsg-for="${key}"]`);
                    if (span) {
                        span.textContent = errors[key].join(' ');
                        span.classList.remove('field-validation-valid');
                        span.classList.add('field-validation-error');
                    }
                });
            }

            form.addEventListener('submit', async function (e) {
                e.preventDefault();

                clearServerErrors();

                // Si jQuery unobtrusive validation está activo, valida en cliente antes de mandar
                if (window.jQuery && jQuery(form).valid && !jQuery(form).valid()) {
                    return;
                }

                btnGuardar.disabled = true;

                try {
                    const formData = new FormData(form);

                    const resp = await fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: formData
                    });

                    if (resp.ok) {
                        const data = await resp.json();
                        window.location.href = data.redirectUrl;
                        return;
                    }

                    const errData = await resp.json();
                    if (errData && errData.errors) {
                        showServerErrors(errData.errors);
                    } else {
                        alertGeneral.textContent = 'Ocurrió un error inesperado.';
                        alertGeneral.classList.remove('d-none');
                    }
                } catch (ex) {
                    alertGeneral.textContent = 'No se pudo completar la solicitud. Intente nuevamente.';
                    alertGeneral.classList.remove('d-none');
                } finally {
                    btnGuardar.disabled = false;
                }
            });
        })();
    </script>
}
